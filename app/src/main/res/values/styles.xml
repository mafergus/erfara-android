<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_secondary_text</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LargeText.Dark" parent="LargeText">
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="LargeText.Light" parent="LargeText">
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumText.Dark" parent="MediumText">
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="MediumText.Light" parent="MediumText">
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallText.Dark" parent="SmallText">
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="SmallText.Dark.Secondary" parent="SmallText">
        <item name="android:textColor">@color/dark_secondary_text</item>
    </style>

    <style name="SmallText.Light" parent="SmallText">
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="Button.LightText" parent="Button">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
